{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "jest/globals": true
    },
    "plugins": ["jest", "html"],
    "extends": [
        "airbnb-base",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "ignorePatterns": ["**/deprecated/*.js"],
    "rules": {
        "no-use-before-define": "off",
        "no-throw-literal": "off",
        "no-console": "off",
        "no-plusplus": "off",
        "no-param-reassign": "off",
        "linebreak-style": ["error", "windows"],
        "max-len": [2, 120, 4, {"ignoreUrls": true}]
    },
    "settings": {
        "jest": {
          "version": 26
        }
      }
}
